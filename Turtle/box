local tt = true

function chkfuel() -- check the fuel level
  turtle.select(1)
  if turtle.getFuelLevel() < 10 then
    turtle.refuel(1)
  end
end

function chkinv() -- check the inventory spaces
  if turtle.getItemCount(16) > 1 then
    drop()
  end
end

function drop() -- drop down the loot
  for i = 2, 16, 1 do
    turtle.select(i)
    turtle.dropDown()
  end
  turtle.select(2)
end

function fw() -- move forward
  chkfuel()
  while turtle.digUp() do
    chkinv()
  end
  while not turtle.forward() do
    turtle.dig()
    chkinv()
  end
end

function line() -- move forward 9 times
  for i = 1, 9, 1 do
    fw()
  end
end

function turn() -- turn right or left
  if tt then
    turtle.turnRight()
    fw()
    turtle.turnRight()
    tt = not tt
  else
    turtle.turnLeft()
    fw()
    turtle.turnLeft()
    tt = not tt
  end
end

function layer() -- dig a 9x9 layer
  for i = 1, 9, 1 do
    line()
    if i < 9 then 
      turn()
    end
  end
end

function up() -- move up and turn right direction
  chkfuel()
  chkinv()
  while not turtle.up() do
    turtle.digUp()
  end
end


-- main loop
-- dig 7 layers
for i = 1, 6, 2 do
  layer()
  if i < 6 then
    turtle.turnLeft()
    turtle.turnLeft()
    up()
    up()
  end
end

-- move down to ease the pickup process
while turtle.down() do
  chkfuel()
end
